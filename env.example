# Scoring Algorithm Parameters
# These parameters control the scoring algorithm behavior
# The algorithm itself remains secure on the server side

# Legendary precision bonus for exact guesses (lower === upper === answer)
SCORING_EXACT_GUESS_BONUS=10000

# Buffer multiplier for edge cases when bounds are equal but not exact
# Used to prevent division by zero: buffer = max(0.01, abs(lower) * BUFFER_MULTIPLIER)
SCORING_BUFFER_MULTIPLIER=0.01

# Base score component (guaranteed minimum for any hit)
SCORING_BASE_SCORE=50

# Precision exponent for the convexity formula
# Lower values create steeper rewards for precision
# Formula: score = BASE_SCORE * (1 / relativeWidth^PRECISION_EXPONENT)
SCORING_PRECISION_EXPONENT=0.7

# Decimal places for individual question scores
SCORING_INDIVIDUAL_DECIMALS=1

# Decimal places for total session scores
SCORING_TOTAL_DECIMALS=2

